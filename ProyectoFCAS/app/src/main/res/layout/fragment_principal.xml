<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".PrincipalFragment">

    <Button
        android:id="@+id/button_add_ingreso"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/add_ingreso_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_add_gasto"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_add_gasto"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/add_gasto_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_add_ingreso"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_gastos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/pr_gastos_button"
        app:layout_constraintEnd_toEndOf="@+id/button_presupuestos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_presupuestos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/pr_presupuestos_button"
        app:layout_constraintEnd_toEndOf="@+id/button_estadisticas"
        app:layout_constraintTop_toBottomOf="@+id/button_estadisticas" />

    <Button
        android:id="@+id/button_ingresos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="32dp"
        android:text="@string/pr_ingresos_button"
        app:layout_constraintEnd_toEndOf="@+id/button_presupuestos"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gastos" />

    <Button
        android:id="@+id/button_estadisticas"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/pr_estadistica_button"
        app:layout_constraintEnd_toEndOf="@+id/button_transferencias"
        app:layout_constraintTop_toBottomOf="@+id/button_transferencias" />

    <Button
        android:id="@+id/button_transferencias"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/pr_transferencias_button"
        app:layout_constraintEnd_toEndOf="@+id/button_ingresos"
        app:layout_constraintTop_toBottomOf="@+id/button_ingresos" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button_presupuestos,button_transferencias,button_gastos,button_ingresos,button_estadisticas" />

    <Button
        android:id="@+id/buttonBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/button_borrarBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>